[[workflows.workflow]]
name = "CLI Setup"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install commander inquirer chalk && chmod +x bin/vibe.js && npm link"

[[workflows.workflow]]
name = "test_vibe_cli"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install commander inquirer chalk && chmod +x bin/vibe.js && mkdir -p test-project && cd test-project && node ../bin/vibe.js init"

[[workflows.workflow]]
name = "Component Preview"
author = 31452560
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node server.js"

[[workflows.workflow]]
name = "Component Showcase"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd test-project && node server.js"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
